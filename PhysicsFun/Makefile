.PHONY: clean prebuild

SHELLTYPE := posix
ifeq (.exe,$(findstring .exe,$(ComSpec)))
	SHELLTYPE := msdos
endif

# Configurations
# #############################################

RESCOMP = windres
TARGETDIR = ../bin/Release/PhysicsFun
TARGET = $(TARGETDIR)/PhysicsFun
OBJDIR = ../bin-int/Release/PhysicsFun
DEFINES += -DGLFW_INCLUDE_NONE -DNDEBUG
INCLUDES += -I../dependencies/glfw/include -I../dependencies/glad/include -I../dependencies/glm -I../dependencies/imgui
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -O2
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -O2
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
LIBS += ../bin/Release/glfw/libglfw.a ../bin/Release/glad/libglad.a ../bin/Release/imgui/libimgui.a -ldl -lpthread -lX11
LDDEPS += ../bin/Release/glfw/libglfw.a ../bin/Release/glad/libglad.a ../bin/Release/imgui/libimgui.a
ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64 -s
LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef

