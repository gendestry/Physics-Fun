# #############################################


# File sets
# #############################################

GENERATED :=
OBJECTS :=

GENERATED += $(OBJDIR)/Application.o
GENERATED += $(OBJDIR)/Mesh.o
GENERATED += $(OBJDIR)/ResourceManager.o
GENERATED += $(OBJDIR)/Shader.o
GENERATED += $(OBJDIR)/Source.o
GENERATED += $(OBJDIR)/Texture.o
OBJECTS += $(OBJDIR)/Application.o
